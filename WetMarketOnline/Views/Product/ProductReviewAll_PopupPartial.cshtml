@using EWM.Models;
@model List<MstProductReview>

<!-- Modal -->
<div class="modal fade" id="productReviewAllPopup" tabindex="-1" aria-labelledby="productReviewAllPopupLabel" aria-hidiven="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productReviewAllPopupLabel">All Reviews</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body-->
            <div class="modal-body">
                @{
                    if (Model.Count ==0)
                    {
                        <p><strong>No Reviews Available.</strong></p>
                    }

                    foreach (var item in Model)
                    {
                        Html.RenderPartial("ProductReviewCard_Partial", item);
                    }
                }


            </div>
        </div>
    </div>
</div>

